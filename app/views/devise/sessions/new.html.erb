<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <fieldset class="form-group">
    <legend class="form-heading">Log in</legend>
    <div class="form-item">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, class: 'form-input is-block' %>
    </div>

    <div class="form-item">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-input is-block' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-item">
        <%= f.check_box :remember_me, class: 'form-input is-checkbox is-inline' %>
        <%= f.label :remember_me, class: 'form-label is-inline' %>
      </div>
    <% end -%>

    <div class="form-actions">
      <%= f.submit "Log in", class: 'btn is-primary is-block form-btn' %>
    </div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
