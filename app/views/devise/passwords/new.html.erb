<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <fieldset class="form-group">
    <legend class="form-heading">Forgot your password?</legend>
    <%= devise_error_messages! %>

    <div class="form-item">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, class: 'form-input is-block' %>
    </div>

    <div class="form-actions">
      <%= f.submit "Send me reset password instructions", class: 'btn is-primary is-block form-btn' %>
    </div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
